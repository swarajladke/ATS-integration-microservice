{
    "info": {
        "_postman_id": "ats-integration-microservice",
        "name": "ATS Integration Microservice",
        "description": "API collection for testing the ATS Integration Microservice locally.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Jobs",
            "item": [
                {
                    "name": "Get All Jobs",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/jobs",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "jobs"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Open Jobs",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/jobs?status=OPEN",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "jobs"
                            ],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "OPEN"
                                }
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Candidates",
            "item": [
                {
                    "name": "Create Candidate",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john.doe@example.com\",\n    \"phone\": \"+1234567890\",\n    \"resume_url\": \"https://example.com/resume.pdf\",\n    \"job_id\": \"PASTE_JOB_ID_HERE\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/candidates",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "candidates"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Applications",
            "item": [
                {
                    "name": "Get Applications for Job",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/applications?job_id=PASTE_JOB_ID_HERE",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "applications"
                            ],
                            "query": [
                                {
                                    "key": "job_id",
                                    "value": "PASTE_JOB_ID_HERE"
                                }
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        }
    ]
}